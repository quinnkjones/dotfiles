set $incre 5

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width $incre px or $incre ppt
        bindsym k resize grow height $incre px or $incre ppt
        bindsym i resize shrink height $incre px or $incre ppt
        bindsym l resize grow width $incre px or $incre ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $incre px or $incre ppt
        bindsym Down resize grow height $incre px or $incre ppt
        bindsym Up resize shrink height $incre px or $incre ppt
        bindsym Right resize grow width $incre px or $incre ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

