bindsym $mod+m mode "mousecontrol"

mode "mousecontrol" {
     bindsym $mod+t exec /home/quinn/.i3/mousetoggle.sh ; mode "default"

     bindsym $mod+c exec xdotool mousemove 1500 0 ; mode "default"

     bindsym i exec xdotool mousemove_relative -- 0 -50
     bindsym k exec xdotool mousemove_relative 0 50
     bindsym j exec xdotool mousemove_relative -- -50 0
     bindsym l exec xdotool mousemove_relative 50 0

     bindsym $mod+i exec xdotool mousemove_relative -- 0 -25
     bindsym $mod+k exec xdotool mousemove_relative  0 25
     bindsym $mod+j exec xdotool mousemove_relative -- -25 00
     bindsym $mod+l exec xdotool mousemove_relative 25 0

     bindsym space  exec xdotool click 1

     bindsym Return mode "default"
     bindsym $mod+m mode "default"
}

mode "(s)hutdown, (r)estart, (l)ogout" {
     bindsym s exec  shutdown -P now
     bindsym r exec shutdown -r now
     bindsym l exec i3-msg exit

     bindsym Return mode "default"
}

