set $incre 5
set $smallInc 2
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width $incre px or $incre ppt
        bindsym k resize grow height $incre px or $incre ppt
        bindsym i resize shrink height $incre px or $incre ppt
        bindsym l resize grow width $incre px or $incre ppt

	bindsym Shift+j resize shrink width $smallInc px or $smallInc ppt
	bindsym Shift+l resize grow width $smallInc px or $smallInc ppt
	bindsym Shift+i resize shrink height $smallInc px or $smallInc ppt
	bindsym Shift+k resize grow height $smallInc px or $smallInc ppt


        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $incre px or $incre ppt
        bindsym Down resize grow height $incre px or $incre ppt
        bindsym Up resize shrink height $incre px or $incre ppt
        bindsym Right resize grow width $incre px or $incre ppt

	bindsym Shift+Left resize shrink width $smallInc px or $smallInc ppt
	bindsym Shift+Right resize grow width $smallInc px or $smallInc ppt
	bindsym Shift+Up resize shrink height $smallInc px or $smallInc ppt
	bindsym Shift+Down resize grow height $smallInc px or $smallInc ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}



bindsym $mod+r mode "resize"
set $mediacontrol "Volume: volume (up/down) un-mute left mute right"
mode $mediacontrol{
      bindsym Return mode "default"
      bindsym Up exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
      bindsym Down exec --no-startup-id pactl --  set-sink-volume 1 -5% #decrease sound volume
      bindsym Left exec --no-startup-id pactl set-sink-mute 1 0 # unmute sound
      bindsym Right exec --no-startup-id pactl set-sink-mute 1 1 # mute sound
}

bindsym $mod+Shift+m mode $mediacontrol

